<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Kind</th>
      <th>Owner</th>
      <th>Name</th>
      <th>Birth day</th>
      <th>Birth month</th>
      <th>Birth year</th>
      <th>Breed</th>
      <th>Picture</th>
      <th>Pet registration number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.kind %></td>
        <td><%= pet.owner %></td>
        <td><%= pet.name %></td>
        <td><%= pet.birth_day %></td>
        <td><%= pet.birth_month %></td>
        <td><%= pet.birth_year %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.picture %></td>
        <td><%= pet.pet_registration_number %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

